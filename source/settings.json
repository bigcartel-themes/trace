{
  "name": "Trace",
  "version": "1.8.0",
  "images": [
    {
      "variable": "logo",
      "label": "Header logo",
      "description": "Recommend transparent background and 300 x 80 size"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "1200px by 800px images recommended"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "secondary_font",
      "text_color": "primary_text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "Work Sans",
              "secondary_font": "Work Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "primary_text_color": "#000000",
              "secondary_text_color": "#000000",
              "welcome_background_color": "#F9F9F9",
              "welcome_text_color": "#000000",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          }
        ]
      },
      {
        "group_name": "Elegant",
        "styles": [
          {
            "style_name": "Elegant #1",
            "fonts": {
              "primary_font": "Marcellus",
              "secondary_font": "Lato"
            },
            "colors": {
              "background_color": "#141415",
              "primary_text_color": "#F8F8F8",
              "secondary_text_color": "#F8F8F8",
              "welcome_background_color": "#242424",
              "welcome_text_color": "#F8F8F8",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          },
          {
            "style_name": "Elegant #2",
            "fonts": {
              "primary_font": "Prata",
              "secondary_font": "Karla"
            },
            "colors": {
              "background_color": "#E9E5E5",
              "primary_text_color": "#0F1B27",
              "secondary_text_color": "#0F1B27",
              "welcome_background_color": "#F0EEEE",
              "welcome_text_color": "#0F1B27",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          }
        ]
      },
      {
        "group_name": "Playful",
        "styles": [
          {
            "style_name": "Playful #1",
            "fonts": {
              "primary_font": "Syne",
              "secondary_font": "Inter"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "primary_text_color": "#0000FF",
              "secondary_text_color": "#0000FF",
              "welcome_background_color": "#FFEE54",
              "welcome_text_color": "#0000FF",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          },
          {
            "style_name": "Playful #2",
            "fonts": {
              "primary_font": "Quicksand",
              "secondary_font": "Quicksand"
            },
            "colors": {
              "background_color": "#FFE9F4",
              "primary_text_color": "#243588",
              "secondary_text_color": "#243588",
              "welcome_background_color": "#FFF6FB",
              "welcome_text_color": "#243588",
              "announcement_text_color": "#FFFFFF",
              "announcement_background_color": "#000000"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Work Sans"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Work Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "primary_text_color",
      "label": "Primary text",
      "default": "#000000"
    },
    {
      "variable": "secondary_text_color",
      "label": "Link hover",
      "default": "#444444"
    },
    {
      "variable": "welcome_background_color",
      "label": "Welcome background",
      "default": "#F9F9F9"
    },
    {
      "variable": "welcome_text_color",
      "label": "Welcome text",
      "default": "#121212"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#000000"
    }
  ],
  "options": [
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "logo_max_height",
      "label": "Header logo image height",
      "type": "select",
      "options": [
        ["Small", "60"],
        ["Medium", "80"],
        ["Large", "120"],
        ["Extra Large", "140"],
        ["XX Large", "180"]
      ],
      "default": "80",
      "description": "Controls the maximum height of your header logo"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field"
    },
    {
      "variable": "welcome_message",
      "label": "Welcome message",
      "type": "text",
      "description": "Displays a welcome message on the Home page"
    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button",
      "type": "text",
      "description": "Displays a link to the Products page on the Home page",
      "default": "Start shopping"
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "type": "text",
      "description": "Displays above your featured products or categories on the Home page",
      "default": "Featured"
    },
    {
      "variable": "featured_items_type",
      "label": "Featured items type",
      "type": "select",
      "options": ["Categories", "Products"],
      "default": "Products",
      "description": "Displays featured products or categories on the Home page"
    },
    {
      "variable": "featured_items",
      "label": "Featured items",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of items featured on the Home page"
    },
    {
      "variable": "all_products_button_text",
      "label": "All products button text",
      "type": "text",
      "description": "Displays underneath featured items and links to your Products Page",
      "default": "View all products"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "product_detail_alignment",
      "label": "Product detail alignment",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Centered", "center"]
      ],
      "default": "center",
      "description": "Alignment for product details under thumbnail images"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product variants",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product variants in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "show_sold_out_product_prices",
      "label": "Show prices for sold out products",
      "type": "boolean",
      "default": true,
      "description": "Show the price of sold out products on product grids and product pages",
      "requires": "inventory"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "border_radius",
      "label": "Rounded corners",
      "type": "select",
      "options": [
        ["Off", "0"],
        ["Small", "2px"],
        ["Medium", "4px"],
        ["Large", "8px"]
      ],
      "default": "4px",
      "description": "Controls the rounded corner style on images and other site elements"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "bluesky_url",
      "label": "Bluesky URL",
      "type": "text",
      "description": "Ex: https://bsky.app/profile/bigcartel.com"
    },
    {
      "variable": "threads_url",
      "label": "Threads URL",
      "type": "text",
      "description": "Ex: https://threads.net/@bigcartel"
    },
    {
      "variable": "twitter_url",
      "label": "X URL",
      "type": "text",
      "description": "Ex: https://x.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "300px",
    "header_image_max_height": "80px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "22px",
    "title_color": "{{ primary_text_color }}",
    "title_background_color": "{{ background_color }}",
    "title_vertical_padding": "27px",
    "background_color": "{{ background_color }}",
    "body_font": "{{ secondary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ secondary_text_color }}",
    "step_header_color": "{{ primary_text_color }}",
    "step_border_width": "2px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ primary_text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_banded": "true",
    "content_background_color": "{{ background_color }}",
    "content_header_background_color": "{{ background_color }}",
    "content_header_color": "{{ primary_text_color }}",
    "content_color": "{{ primary_text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "3px",
    "error_border_color": "#ea4859",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#bfbfbf",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "3px",
    "input_border_width": "2px",
    "input_font": "{{ secondary_font }}",
    "button_color": "{{ background_color }}",
    "button_border_width": "0px",
    "button_border_radius": "3px",
    "button_font": "{{ secondary_font }}",
    "button_hover_color": "{{ background_color }}",
    "button_background_color": "{{ primary_text_color }}",
    "button_hover_background_color": "{{ primary_text_color }}",
    "button_border_color": "{{ background_color }}",
    "button_hover_border_color": "{{ background_color }}",
    "button_text_transform": "none",
    "link_color": "{{ secondary_text_color }}",
    "link_hover_color": "{{ secondary_text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ primary_text_color }}",
    "summary_secondary_color": "{{ secondary_text_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_item_border_color": "{{ secondary_text_color }}",
    "summary_item_list_border_color": "{{ secondary_text_color }}"
  }
}
