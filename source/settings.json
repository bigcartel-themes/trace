  "options": [
    {
      "variable": "logo_max_height",
      "label": "Header logo image size",
      "section": "global_navigation",
      "type": "select",
      "options": [
        ["Small", "60"],
        ["Medium", "80"],
        ["Large", "120"],
        ["Extra Large", "140"],
        ["XX Large", "180"]
      ],
      "default": "80",
      "description": "Controls the maximum size of your header logo"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "section": "global_navigation",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "section": "global_navigation",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "section": "global_navigation",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "section": "global_navigation",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "product_detail_alignment",
      "label": "Product detail alignment",
      "section": "global_navigation",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Centered", "center"]
      ],
      "default": "center",
      "description": "Alignment for product details under thumbnail images"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "section": "global_navigation",
      "type": "boolean",
      "default": true,
      "description": "Displays a search field"
    },
    {
      "variable": "show_categories_in_footer",
      "label": "Show categories in footer",
      "section": "global_navigation",
      "type": "boolean",
      "default": true,
      "description": "Display product category links at the bottom of every page"
    },
    {
      "variable": "show_custom_pages_in_footer",
      "label": "Show custom pages in footer",
      "section": "global_navigation",
      "type": "boolean",
      "default": true,
      "description": "Display links to your custom pages at the bottom of every page"
    },
    {
      "variable": "footer_text",
      "label": "Footer text",
      "section": "global_navigation",
      "type": "text",
      "max_length": 2048,
      "description": "Show a custom message to your shop's footer"
    },
    {
      "variable": "footer_text_position",
      "label": "Footer text position",
      "section": "global_navigation",
      "type": "select",
      "options": [
        ["Start of footer", "start"],
        ["End of footer", "end"]
      ],
      "default": "end",
      "description": "Choose where to show your footer message",
      "requires": [
        "footer_text present"
      ]
    },
    {
      "variable": "homepage_slideshow_autoplay",
      "label": "Auto-play homepage slideshow",
      "section": "homepage",
      "type": "boolean",
      "default": true,
      "description": "Automatically advances slides in the homepage slideshow"
    },
    {
      "variable": "homepage_slideshow_speed",
      "label": "Slideshow speed",
      "section": "homepage",
      "type": "select",
      "options": [
        ["Slowest", 6000],
        ["Slower", 5000],
        ["Normal", 4000],
        ["Faster", 3500],
        ["Fastest", 3000]
      ],
      "default": 4000,
      "description": "Controls how quickly slides advance in the auto-playing slideshow",
      "requires": [
        "homepage_slideshow_autoplay eq true"
      ]
    },
    {
      "variable": "welcome_message",
      "label": "Welcome message",
      "section": "homepage",
      "type": "text",
      "description": "Displays a message above the welcome button on the Home page. Requires a welcome image to be set"

    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button",
      "section": "homepage",
      "type": "text",
      "description": "Displays a link to the Products page on the Home page. Requires a welcome image to be set",
      "default": "Shop now"
    },
    {
      "variable": "welcome_button_behavior",
      "label": "Welcome Button Behavior",
      "section": "homepage",
      "type": "select",
      "options": [
        ["Scroll down page", "scroll"],
        ["Go to Products Page", "navigate"]
      ],
      "default": "scroll",
      "description": "Controls the behavior of the welcome button on the Home page",
      "requires": [
        "welcome_button_text present"
      ]
    },
    {
      "variable": "featured_items_type",
      "label": "Featured items type",
      "section": "homepage",
      "type": "select",
      "options": ["Categories", "Products"],
      "default": "Products",
      "description": "Select which items appear on your homepage: products or categories",
      "requires": [
        "featured_items gt 0"
      ]
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "section": "homepage",
      "type": "text",
      "description": "Displays above your featured products or categories on the Home page",
      "default": "Featured"
    },
    {
      "variable": "featured_items",
      "label": "Featured items",
      "section": "homepage",
      "type": "select",
      "options": "0..48",
      "default": 12,
      "description": "The number of items featured on the Home page"
    },
    {
      "variable": "home_page_categories_image_style",
      "label": "Featured categories image style",
      "section": "homepage",
      "type": "select",
      "options": [
        ["First product", "first_product"],
        ["Random product", "random_product"],
        ["Collage of first products", "collage"],
        ["Collage of random products", "collage_random"]
      ],
      "default": "first_product",
      "upgrade_default": "first_product",
      "description": "Choose which image to display for featured categories",
      "requires": [
        "feature:theme_category_collages eq visible",
        "featured_items_type eq Categories"
      ]
    },
    {
      "variable": "home_page_categories_product_count_display",
      "label": "Featured categories product count display",
      "section": "homepage",
      "type": "select",
      "options": [
        ["Hide product count", "none"],
        ["Show next to category name", "text"],
        ["Circle badge overlay", "circle"],
        ["Square badge overlay", "square"],
        ["Pill badge overlay", "pill"],
        ["Sunburst badge overlay", "sunburst"]
      ],
      "default": "text",
      "upgrade_default": "none",
      "description": "Choose how to display product counts for categories. Badge overlays appear on category images, while text displays next to category names. Note: Collages show counts for categories with 5+ products.",
      "requires": [
        "feature:theme_category_collages eq visible",
        "featured_items_type eq Categories",
        "home_page_categories_image_style neq collage",
        "home_page_categories_image_style neq collage_random"
      ]
    },
    {
      "variable": "all_products_button_text",
      "label": "All products button text",
      "section": "homepage",
      "type": "text",
      "description": "Displays underneath featured items and links to your Products Page",
      "default": "View all products"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
